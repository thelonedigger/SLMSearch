# Directory containing preprocessed MS MARCO data
DATA_DIR=./processed_data

# Name of the sentence-transformers model to use
MODEL_NAME=all-MiniLM-L6-v2

# Whether to use GPU for embedding generation (true/false)
USE_GPU=false

# Directory to save the pipeline
SAVE_DIR=./saved_pipeline

# OpenAI API key for GPT-4o evaluation
# Required only if you're using the GPT-4o evaluation endpoints
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Number of results to return in search by default
DEFAULT_TOP_K=10

# Optional: Port for the FastAPI server (used if running directly with Python)
PORT=8000

# Optional: Host for the FastAPI server (used if running directly with Python)
HOST=0.0.0.0